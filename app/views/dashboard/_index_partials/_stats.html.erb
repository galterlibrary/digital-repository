<div class="panel panel-default">
  <div class="panel-heading dashboard-panel">
    <h3 class="panel-title"><%= t("sufia.dashboard.stats.heading") %></h3></div>

  <table class="table table-condensed">
    <tr>
      <td>
        <span class="badge">
          <%= link_to number_of_files, sufia.dashboard_files_path %>
        </span>
      </td>
      <td>
        <%= t("sufia.dashboard.stats.files") %>
        <ul class="views-downloads-dashboard">
          <li><span class="badge-optional"><%= @user.total_file_views %></span> <%= t("sufia.dashboard.stats.file_views").pluralize(@user.total_file_views) %></li>
          <li><span class="badge-optional"><%= @user.total_file_downloads %></span> <%= t("sufia.dashboard.stats.file_downloads").pluralize(@user.total_file_downloads) %></li>
        </ul>
      </td>
    </tr>

    <tr>
      <td>
        <span class="badge">
          <%= link_to number_of_collections, sufia.dashboard_collections_path %>
        </span>
      </td>
      <td><%= t("sufia.dashboard.stats.collections") %></td>
    </tr>
    <tr>
      <td>
        <span class="badge">
          <%= link_to @user.all_following.count,
            sufia.profile_path(@user, anchor: 'following') %>
        </span>
      </td>
      <td><%= t("sufia.dashboard.stats.following") %></td>
    </tr>
    <tr>
      <td>
        <span class="badge">
          <%= link_to @user.followers.count,
            sufia.profile_path(@user, anchor: 'followers') %>
        </span>
      </td>
      <td><%= t("sufia.dashboard.stats.followers") %></td>
    </tr>
    <tr>
      <td>
        <span class="badge">
          <%= link_to @user.all_followed_collections.count,
            sufia.profile_path(@user, anchor: 'followedCollections') %>
        </span>
      </td>
      <td>Collections you follow</td>
    </tr>
  </table>
</div>
