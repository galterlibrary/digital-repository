input.single_value_with_help {
  margin-left: 0;
  max-width: 40em;
  padding-left: 12px;
}

.single_text_with_help {
  max-width: 500px;
}

.collection_multi_page label:not(.boolean_with_help) {
  height: 20px;
  width: 16px;
  margin-left: 15px;
}

body {
  word-wrap: break-word;
}

/* Catalog */
ol.catalog table.table tbody tr:first-child td {
  word-break: break-all;
}

/* Notifications Page */
div[id="Data"] tbody tr td:nth-child(3) {
  word-break: break-all;
}

/* My Files */
.file_listing_thumbnail {
  margin-right: 5px;
}

/* My Files/Collections */
tr[id^="document"] div[class="media"] div[class="media-body"] div[class="media-heading"] {
  word-break: break-all;
}

/* Editing a collection */
@media (min-width: 768px) {
  .file-listing-title {
    word-break: break-all;
  }
}

@media (max-width: 767px) {
  .file-listing-title {
    text-overflow: ellipsis;
    overflow: hidden !important;
    max-width: 130px;
  }
}

/* Viewing a collection */
@media (min-width: 768px) {
  .media-heading > a {
    word-break: break-all;
  }
}

@media (max-width: 767px) {
  .media-heading > a {
    text-overflow: ellipsis;
    overflow: hidden !important;
    max-width: 130px;
  }
}



/* Dashboard */
table[id="activity"] tbody tr td:first-child {
  word-break: break-all;
}

div[id="notifications"] tbody tr td:nth-child(3) {
  word-break: break-all;
}

table[id="outgoing-transfers"] tbody tr td:first-child {
  word-break: break-all;
}

table[id="incoming-transfers"] tbody tr td:first-child {
  word-break: break-all;
}

/* Porfile */
tr[id^="trophyrow_"] td:nth-child(2) {
  word-break: break-all;
}

/* File upload */
table#file-table td.name {
  word-break: break-all;
}

table h4.media-heading {
  word-break: break-all;
}

#content-header > div h1 {
  font-weight: 700;
  color: #54585A;
}

p#main_gf_actions > a {
  background-color: #777;
  display: inline;
  padding: 0.2em 0.6em 0.3em;
  font-size: 75%;
  font-weight: bold;
  line-height: 1;
  color: #FFF;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 0.25em;
}

#file_download figure img {
  width: 100%
}

.sort-toggle {
  display: table;
  width: 100%;
}

#openSeaDragonViewer {
  margin-top: 3px;
}

#descriptions_display > h2 {
  display: table;
  width: 100%;
}

@media (max-width: 500px) {
  #descriptions_display > h2 > small {
    float: none !important;
    display: block;
  }
}

@media (max-width:991px) and (min-width:768px) {
  #user_utility_links > .dropdown-toggle {
    padding-right: 5px;
    padding-left: 5px;
  }
}

.col-action {
  margin-top: 5px;
  margin-bottom: 5px;
}

.view-type {
  margin-bottom: 5px;
}

@media (min-width: 768px) {
  #collection_search {
    width: 200px;
  }
}
@media (max-width: 767px) {
  .col-search {
    float: none !important;
  }
  #collection_search {
    width: 100%;
  }
  .form-search {
    width: auto;
  }
}

#footer {
  margin-top: 5px;
}

.ui-autocomplete-loading {
  background-image: url(<%= asset_path 'spin.gif' %>);
  background-color: #ffffff;
  background-size: 16px 16px;
  background-position:right center;
  background-repeat: no-repeat;
}

